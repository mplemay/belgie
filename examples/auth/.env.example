# Belgie Example App Configuration

# Secret key for session signing (change this in production!)
BRUGGE_SECRET=your-secret-key-here-change-in-production

# Base URL for your application
BRUGGE_BASE_URL=http://localhost:8000

# Google OAuth Configuration
# Get these from https://console.cloud.google.com/apis/credentials
BRUGGE_GOOGLE_CLIENT_ID=your-google-client-id
BRUGGE_GOOGLE_CLIENT_SECRET=your-google-client-secret
BRUGGE_GOOGLE_REDIRECT_URI=http://localhost:8000/auth/callback/google

# Session Configuration
BRUGGE_SESSION_COOKIE_NAME=belgie_session
BRUGGE_SESSION_MAX_AGE=604800  # 7 days in seconds
BRUGGE_SESSION_UPDATE_AGE=3600  # 1 hour in seconds

# Cookie Configuration
BRUGGE_COOKIE_SECURE=false  # Set to true in production with HTTPS
BRUGGE_COOKIE_HTTP_ONLY=true
BRUGGE_COOKIE_SAME_SITE=lax

# URL Configuration
BRUGGE_URLS_SIGNIN_REDIRECT=/dashboard
BRUGGE_URLS_SIGNOUT_REDIRECT=/
